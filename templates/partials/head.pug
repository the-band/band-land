head
  block head
    //- ^ see what I did there?
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width')
    meta(name='description', content=site.description)

    title
      block title
        = site.title
    link(rel='author', href=owner.name)
    link(rel='shortcut icon' href='favicon.ico' type='image/x-icon')
    link(rel='stylesheet', href=relativePath + fingerprint['css/vendor/normalize.css'])
    link(rel='stylesheet', href=relativePath + fingerprint['css/vendor/flexboxgrid.css'])
    //- link(rel='stylesheet', href=relativePath + fingerprint['css/vendor/topcoat.css']) <3 garth and kristofer :)
    link(rel='stylesheet', href=relativePath + fingerprint['css/landing.css'])

    script(type='text/javascript', src=relativePath + fingerprint['js/main.js'] )
